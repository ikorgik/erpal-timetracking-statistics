{
  "manifest_version": 2,

  "name": "ERPAL Timetracking",
  "description": "This extension shows an ERPAL Timetracking in detail.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://erpal.local/",
    "https://erpal.brightsolutions.de/"
  ]
}